@page "{id}"
@model CarPark.Pages.Cars.EditModel
@{
}

<form method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <input type="text" asp-for="Item.Id" hidden>
    <div class="form-group">
        <label asp-for="Item.Make">Производитель</label>
        <input type="text" class="form-control @(Model.ModelState.IsValid ? "" : "is-invalid")" asp-for="Item.Make">
        <div class="invalid-feedback" style="display:block;">
            <span asp-validation-for="Item.Make"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Item.Name">Наименование</label>
        <input type="text" class="form-control @(Model.ModelState.IsValid ? "" : "is-invalid")" asp-for="Item.Name">
        <div class="invalid-feedback" style="display:block;">
            <span asp-validation-for="Item.Name"></span>
        </div>
    </div>

    <button type="submit" class="btn btn-success">Изменить</button>
    <a class="btn btn-light" asp-page="Index">Назад</a>
</form>
